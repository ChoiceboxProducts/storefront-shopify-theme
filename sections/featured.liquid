{% if section.settings.collection_handle != blank %}
  {%
    render 'product_list',
    collection_handle: section.settings.collection_handle,
    title: "Featured",
    section_id: section.id,
    class_name: "featured",
    id: "featured"
  %}
{% endif %}

{% schema %}
  {
    "name": "Product List",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "collection_handle",
        "label": "Collection",
        "info": "Specifiy the collection handle found in the Shopify admin page."
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          { "value": "grid", "label": "Grid" },
          { "value": "list", "label": "List" }
        ],
        "default": "grid"
      }
    ],
    "presets": [{
        "name": "Product List",
        "category": "Page Layout"
    }]
  }
{% endschema %}