<section class="hero hero-{{ section.id }}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'message' %}
        <style>
          .hero-{{ section.id }} {
            font-size: {{ block.settings.font_size }};
            line-height: 1.5;
          }

          .hero-{{ section.id }} p {
            margin: {{ block.settings.margin }};
            font-family: {% case block.settings.font %}
              {% when 'display' %}
                {{ settings.display_font }}
              {% when 'copy' %}
                {{ settings.copy_font }}
              {% endcase %}, sans-serif;
          }
        </style>

        {{ block.settings.message }}
    {% endcase %}
  {% endfor %}
</section>

{% schema %}
  {
    "name": "Hero",
    "presets": [{
        "name": "Hero",
        "category": "Page Layout"
    }],
    "blocks": [
      {
        "name": "Message",
        "type": "message",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "message",
            "label": "Message"
          },
          {
            "type": "text",
            "id": "font_size",
            "label": "Font Size",
            "default": "1.8rem"
          },
          {
            "type": "text",
            "id": "margin",
            "label": "Margin",
            "default": "0"
          },
          {
            "type": "select",
            "id": "font",
            "label": "Font",
            "options": [
              { "value": "display", "label": "Display" },
              { "value": "copy", "label": "Copy" }
            ],
            "default": "display"
          }
        ]
      }
    ]
  }
{% endschema %}