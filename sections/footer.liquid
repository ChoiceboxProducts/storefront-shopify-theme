{% if section.settings.active %}
  <style>
    footer {
      margin-bottom: 1rem;
      margin-top: 4rem;
      line-height: 1.2;
    }

    footer ul {
      margin: 0;
    }

    .links {
      display: inline;
      padding: 0;
    }

    .links li {
      display: inline;
      white-space: nowrap;
    }

    .links li:before {
      content: "\22C5\00A0";
    }
  </style>

  <footer class="page-footer">
    <small>
      <span class="copyright">&copy; {{ "now" | date: "%Y" }} {{ shop.name }}.</span>
      {% if section.settings.static_text != blank %}
        <span>{{ section.settings.static_text | t }}</span>
      {% endif %}
      {% if linklists.footer.links != blank %}
        <ul class="links">
          {% for link in linklists.footer.links %}
            {% if link.url != request.path %}
              <li><a href="{{ link.url }}">{{ link.title | t }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}
    </small>
  </footer>
{% endif %}

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "active",
        "label": "Active",
        "default": true
      },
      {
        "type": "text",
        "id": "static_text",
        "label": "Static Text"
      }
    ],
    "presets": [{
        "name": "Footer",
        "category": "Page Layout"
    }]
  }
{% endschema %}