/* Spartan-500 - latin */
@font-face {
    font-family: 'Spartan';
    font-style: normal;
    font-weight: 500;
    src: local(''),
    url({{ 'spartan-v2-latin-500.woff2' | asset_url }}) format('woff2'),
    url({{ 'spartan-v2-latin-500.woff' | asset_url }}) format('woff');
}

/* Spartan-700 - latin */
@font-face {
    font-family: 'Spartan';
    font-style: normal;
    font-weight: 700;
    src: local(''),
    url({{ 'spartan-v2-latin-700.woff2' | asset_url }}) format('woff2'),
    url({{ 'spartan-v2-latin-700.woff' | asset_url }}) format('woff');
}

/* Custom Properties */
:root {
  --default-copy-color: {{ settings.default_copy_color }};
  --page-background-color: {{ settings.page_background_color }};
  --page-border-color: {{ settings.page_border_color }};
  --page-border-width: {{ settings.page_border_width }};
  --page-content-max-width: {{ settings.page_content_max_width }};
}

/* General */

*,
*::before,
*::after {
  box-sizing: border-box;
}

/* TODO: Style scrollbars for Firefox */
*::-webkit-scrollbar {
  background-color: transparent;
  height: 8px;
  width: 7px;
}

*::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.5);
}

strong {
  font-weight: 600;
}

h1, h2, h3, h4, h5, h6 {
  font-family: {{ settings.display_font }}, sans-serif;
  line-height: 1.6;
}

/* Layout */

html {
  height: 100%;
}

body::before {
  border: var(--page-border-width) solid var(--page-border-color);
  content: "";
  display: block;
  height: 100%;
  left: 0;
  pointer-events: none;
  position: fixed;
  top: 0;
  width: 100%;
}

body {
  background-color: var(--page-background-color);
  color: var(--default-copy-color);
  font-family: {{ settings.copy_font }}, sans-serif;
  height: 100%;
  margin: 0;
  overflow: hidden;
  padding: var(--page-border-width);
}

.page {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto;
}

.page-header {
  flex: 0 0;
  background-color: rgba(0, 0, 255, 0.1);
}

.page-footer {
  flex: 0 0;
  background-color: rgba(0, 255, 0, 0.1);
}

main {
  flex: 1 0;
}

main,
.page > .shopify-section {
  max-width: var(--page-content-max-width);
  align-self: center;
  width: 100%;
}

/* Front page */

.index main {
  margin-top: 10rem;
}