/* Custom Properties */

:root {
  --page-background-color: {{ settings.page_background_color }};
  --page-border-color: {{ settings.page_border_color }};
  --page-border-width: {{ settings.page_border_width }};
  --page-content-max-width: {{ settings.page_content_max_width }};
}

/* General */

*,
*::before,
*::after {
  box-sizing: border-box;
}

/* TODO: Style scrollbars for Firefox */
*::-webkit-scrollbar {
  background-color: transparent;
  height: 8px;
  width: 7px;
}

*::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.5);
}

/* Layout */

html {
  height: 100%;
}

body::before {
  border: var(--page-border-width) solid var(--page-border-color);
  content: "";
  display: block;
  height: 100%;
  left: 0;
  pointer-events: none;
  position: fixed;
  top: 0;
  width: 100%;
}

body {
  background-color: var(--page-background-color);
  font-family: sans-serif;
  height: 100%;
  margin: 0;
  overflow: hidden;
  padding: var(--page-border-width);
}

.page {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto;
}

.page-header {
  flex: 0 0;
  background-color: rgba(0, 0, 255, 0.1);
}

.page-footer {
  flex: 0 0;
  background-color: rgba(0, 255, 0, 0.1);
}

main {
  flex: 1 0;
}

main,
.page > .shopify-section {
  max-width: var(--page-content-max-width);
  align-self: center;
  width: 100%;
}

