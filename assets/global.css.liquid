/* Inter Variable - latin */
@font-face {
    font-family: 'Inter V';
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: local(''),
         url({{ 'inter-v3.15-latin-var.woff2' | asset_url }}) format('woff2');
    unicode-range: U+0000-007F,U+00A0-0100,U+0131,U+0152-0154,U+02BB-02BD,U+02C6,U+02DA,U+02DC,U+2000-200C,U+2010-2028,U+202F-2060,U+2074,U+20AC,U+2122,U+2191,U+2193,U+2212,U+FEFF;
    font-named-instance: 'Regular';
}

/* Inter Variable Italic - latin */
@font-face {
    font-family: 'Inter V';
    font-style: oblique 0deg 10deg;
    font-weight: 100 900;
    font-display: swap;
    src: local(''),
         url({{ 'inter-v3.15-latin-var.woff2' | asset_url }}) format('woff2');
    unicode-range: U+0000-007F,U+00A0-0100,U+0131,U+0152-0154,U+02BB-02BD,U+02C6,U+02DA,U+02DC,U+2000-200C,U+2010-2028,U+202F-2060,U+2074,U+20AC,U+2122,U+2191,U+2193,U+2212,U+FEFF;
    font-named-instance: 'Italic';
}

/* Custom Properties */
:root {
  --default-copy-color: {{ settings.default_copy_color }};
  --page-background-color: {{ settings.page_background_color }};
  --page-border-color: {{ settings.page_border_color }};
  --page-border-width: {{ settings.page_border_width }};
  --page-content-max-width: {{ settings.page_content_max_width }};
  --neutral-accent-color: {{ settings.neutral_color }};
  --positive-accent-color: {{ settings.positive_color }};
  --negative-accent-color: {{ settings.negative_color }};
  --primary-accent-color: {{ settings.primary_accent_color }};
  --page-horizontal-padding: 10%;
  --input-border-radius: 4px;
}

/* General */

*,
*::before,
*::after {
  box-sizing: border-box;
}

/* TODO: Style scrollbars for Firefox */
*::-webkit-scrollbar {
  background-color: transparent;
  height: 8px;
  width: 7px;
}

*::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.5);
}

*::selection {
  color: inherit;
  background-color: #c4e9ff;
}

*:focus {
  outline: none;
}

a:link,
a:visited {
  color: {{ settings.anchor_color }};
  text-decoration: underline;
  text-decoration-color: {{ settings.anchor_underline_color }};
  text-decoration-thickness: 0.1em;
  transition: color 100ms, text-decoration-color 100ms;
}

a:hover {
  color: {{ settings.anchor_hover_color }};
  text-decoration-color: {{ settings.anchor_underline_hover_color }};
}

strong {
  font-weight: 600;
}

small {
  font-size: 0.8em;
}

h1, h2, h3, h4, h5, h6 {
  font-family: {{ settings.display_font }}, sans-serif;
  letter-spacing: -0.03rem;
  line-height: 1.5;
  margin: 0;
}

h1 {
  font-size: 2.5rem;
  margin-top: 3rem;
}

@media (max-width: 46rem) {
  h1 {
    font-size: 2rem;
  }
}

h2 {
  margin-top: 3rem;
  margin-bottom: 0.5rem;
}

h3 {
  margin-top: 3rem;
}

h2 + h3 {
  margin-top: 1rem;
}

.button,
input,
select,
textarea,
button {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  font-family: inherit;
  font-size: inherit;
  border: 0;
  padding: 1.1rem 1.2rem 0.9rem;
  border-radius: var(--input-border-radius);
  color: inherit;
}

input::placeholder {
  color: inherit;
  opacity: 0.5;
}

.button:link,
.button:visited,
button,
input[type="button"],
input[type="submit"],
input[type="reset"] {
  cursor: pointer;
  background-color: var(--primary-accent-color);
  color: #fff;
  font-weight: 700;
  font-family: {{ settings.display_font }}, sans-serif;
  vertical-align: bottom;
  white-space: nowrap;
  text-decoration: none;
}

.call-to-action,
button[type="submit"],
input[type="submit"] {
  background-image: url("data:image/svg+xml,%3Csvg width='29' height='25' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M27.5 12.5h-26M17.4 2.4l10.1 10.1L17.4 2.4zm10.1 10.1L17.4 22.6l10.1-10.1z' stroke='%23fff' stroke-width='2.9' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: calc(100% - 20px) 50%;
  padding-right: 3rem;
}

.call-to-action,
input[type="submit"] {
  padding-right: 4rem;
}

button[type="submit"] > span {
  padding-right: 1rem;
}

input.unified {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

input + button {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

@media (max-width: 46rem) {
  button,
  input {
    border-radius: var(--input-border-radius);
    display: block;
    width: 100%;
  }

  input.unified {
    border-radius: var(--input-border-radius);
  }

  input + button {
    border-radius: var(--input-border-radius);
    margin-top: 1rem;
  }
}

ul {
  list-style-type: square;
  padding: 0;
}

@media (max-width: 46rem) {
  ul {
    padding-left: 1rem;
  }
}

p {
  margin-top: 0;
}

@media (max-width: 46rem) {
  p {
    margin-right: -0.3rem;
  }

  a {
    overflow-wrap: break-word;
  }
}

.visually-hidden {
  clip: rect(1px, 1px, 1px, 1px);
  clip-path: inset(50%);
  height: 1px;
  width: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
}

.updated-date {
  font-size: 1rem;
  font-weight: 600;
  opacity: 0.4;
  position: absolute;
  right: 0;
  top: -3.1rem;
}

@media (max-width: 38rem) {
  .updated-date {
    position: static;
    margin: -0.7rem 0 1rem;
    display: block;
  }
}

.no-break,
a[href^="mailto"] {
  white-space: nowrap;
}

form .errors {
  border-radius: 4px;
  color: var(--negative-accent-color);
  padding: 1rem 2.3rem;
  margin-bottom: 1rem;
  border: 3px solid var(--negative-accent-color);
  font-weight: 600;
}

form .errors ul {
  margin: 0;
}

@media (max-width: 46rem) {
  form .errors {
    padding: 1rem 2rem;
  }
}

/* Change Autocomplete styles in Chrome */
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
textarea:-webkit-autofill,
textarea:-webkit-autofill:hover,
textarea:-webkit-autofill:focus,
select:-webkit-autofill,
select:-webkit-autofill:hover,
select:-webkit-autofill:focus {
  -webkit-text-fill-color: var(--default-copy-color);
  -webkit-box-shadow: 0 0 0px 1000px #fff inset;
}

/* Product Listings */

a.product:link,
a.product:visited {
  color: var(--default-copy-color);
  text-decoration: none;
}

/* Layout */

html {
  height: 100%;
}

body::before {
  border: var(--page-border-width) solid var(--page-border-color);
  content: "";
  display: block;
  height: 100%;
  left: 0;
  pointer-events: none;
  position: fixed;
  top: 0;
  width: 100%;
}

body {
  background-color: var(--page-background-color);
  color: var(--default-copy-color);
  font-family: {{ settings.copy_font }}, sans-serif;
  height: 100%;
  margin: 0;
  overflow: hidden;
  padding: var(--page-border-width);
  font-size: 1.25rem;
  line-height: 1.5;
}

@media (max-width: 46rem) {
  :root {
    --page-horizontal-padding: 6%;
    --page-border-width: 0;
  }

  body {
    font-size: 1rem;
    overflow: auto;
    min-height: 100%;
  }

  .content {
    height: auto;
    min-height: 100%;
  }
}

.content {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto;
  padding: 0 var(--page-horizontal-padding);
  transition: padding 200ms;
}

main {
  flex: 1 0;
  margin-top: calc(var(--max-margin-top) * 1rem);
}

main,
.content > .shopify-section {
  max-width: var(--page-content-max-width);
  align-self: center;
  width: 100%;
}

/* Front page */

.challenge main,
.index main {
  --max-margin-top: 3; /* rem */
  --min-margin-top: 2;  /* rem */
  --margin-top-delta: calc(var(--max-margin-top) - var(--min-margin-top));
  --transition-start-width: 46; /* rem, NOTE: remember to change media queries below when changing this value */
  --transition-end-width: 26;   /* rem, NOTE: remember to change media queries below when changing this value */
  --transition-width-delta: calc(var(--transition-start-width) - var(--transition-end-width));
}

.challenge main {
  --max-margin-top: 2;  /* rem */
  --min-margin-top: 2;  /* rem */
}

/* NOTE: Cannot use CSS custom properties in media queries */
@media (max-width: 46rem) {
  .challenge main,
  .index main {
    margin-top: calc((var(--max-margin-top) * 1rem) - ((((var(--transition-start-width) * 1rem) - 100vw) / var(--transition-width-delta)) * var(--margin-top-delta)));
  }
}

/* NOTE: Cannot use CSS custom properties in media queries */
@media (max-width: 26rem) {
  .challenge main,
  .index main {
    margin-top: calc(var(--min-margin-top) * 1rem);
  }
}

/* Logo */
.logo {
  fill: {{ settings.logo_primary_color }}
}

.logo .accent {
  fill: {{ settings.logo_accent_color }};
}

/* Shopify Reset */
.shopify-policy__container {
  padding: 0;
  max-width: initial;
  margin: 0;
}

.shopify-policy__title {
  margin-bottom: 1rem;
  text-align: left;
}

.shopify-policy__body > div > p:first-of-type {
  font-size: 1.5em;
}

.shopify-policy__body > div {
  position: relative;
}

.shopify-policy__body table {
  margin: 1rem 0 3rem;
  table-layout: fixed;
  width: 100%;
  font-size: 0.9em;
}

.shopify-policy__body table td:first-child {
  width: 30%;
}

.shopify-policy__body table thead {
  display: none;
}

.shopify-challenge__container {
  max-width: initial;
  margin: 0;
}

.shopify-challenge__container .shopify-challenge__message,
.shopify-challenge__container .shopify-challenge__errors {
  text-align: initial;
}

.shopify-challenge__container form {
  display: flex;
}

.shopify-challenge__container .g-recaptcha,
.shopify-challenge__container .g-recaptcha div {
  margin: 0;
}

.shopify-challenge__container .shopify-challenge__button {
  margin: 0 0 2px 10px;
}

@media (max-width: 46rem) {
  .shopify-challenge__container form {
    display: block;
    width: 304px;
  }

  .shopify-challenge__container .shopify-challenge__button {
    margin: 0.5rem 0 0;
    width: 100%;
  }
}
 
@media (max-width: 46rem) {
  .shopify-policy__body > div > p:first-of-type {
    font-size: 1.2em;
  }

  .shopify-policy__body table {
    font-size: 1em;
    margin-bottom: 1rem;
  }

  .shopify-policy__body table td {
    display: block;
  }

  .shopify-policy__body table td:nth-child(2) {
    padding-bottom: 1rem;
  }

  .shopify-policy__body table code {
    font-size: 1.4em;
  }
}